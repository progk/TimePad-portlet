<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
    <portlet>
        <portlet-name>TimePad-portlet</portlet-name>
        <display-name>TimePad-portlet</display-name>
        <portlet-class>com.tuneit.timepad.TimePad</portlet-class>
        <init-param>
            <name>view-jsp</name>
            <value>/jsp/view.jsp</value>   
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>TimePad-portlet</title>
            <short-title>TimePad-portlet</short-title>
            <keywords>TimePad-portlet</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
        
    <portlet>
        <portlet-name>TimePadFront</portlet-name>
        <display-name>TimePad</display-name>
        <portlet-class>com.tuneit.timepad.TimePadFront</portlet-class>
        <init-param>
            <name>view-jsp</name>
            <value>/jsp/form.jsp</value>   
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>TimePadFront</title>
            <short-title>TimePadFront</short-title>
            <keywords>TimePadFront</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>